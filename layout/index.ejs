<div id="home-head">
    <script>
        var menu = document.getElementById("menu")
        menu.className += " menu-color"
        
        // 随机banner
        const banners = ['01.png', '02.png', '03.png', '04.jpg', '05.png', '06.png', '07.png', '08.png', '09.png', '10.png'];
        const randomBanner = banners[Math.floor(Math.random() * banners.length)];
        document.getElementById('home-head').style.backgroundImage = 'url(/banner/' + randomBanner + ')';
        document.getElementById('home-head').style.backgroundSize = 'cover';
        document.getElementById('home-head').style.backgroundPosition = 'center';
    </script>
    <% if(theme.head_block_enable){ %> 
    <div id="home-info" class="home-info" @click="home_click">
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="info">
            <div class="wrap">
                <h1><%- config.title %></h1>
                <h3><%- config.subtitle %></h3>
                <h5><%- config.description %></h5>
            </div>
        </span>
    </div>
    <% } %> 
</div>

<% 
    var wrapClass = ""
    if(!theme.card.enable){
        wrapClass = "home-posts-wrap-no-card"
    } 
%>

<div id="home-posts-wrap" class=<%- wrapClass %>>
    <div id="home-posts">

        <div id="posts">
            <%- include("posts") %>

            <%- include("current") %>
        </div>
    </div>
    <% if(theme.card.enable){ %>
    <div id="home-card">
        <%- include("card") %>
    </div>
    <% } %>
</div>